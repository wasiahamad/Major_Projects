<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <!-- Form to edit an existing listing -->
        <h3>Edit your Listings</h3>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-2">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" type="text" value="<%= listing.title %>" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-2">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                <div class="invalid-feedback">
                    Please Enter a short description
                </div>
            </div>

            <div class="mb-3">
                Oringinal Image <br>
                <img src="<%= originalImageUrl %>" alt="<%= listing.title %>">
            </div>

            <div class="mb-2">
                <label for="image" class="form-label">Upload New Image</label>
                <input name="listing[image]" class="form-control" type="file" >
            </div>
            <div class="row">
                <div class="mb-2 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" type="text" value="<%= listing.price %>" class="form-control" required>
                    <div class="invalid-feedback">
                        Price should be valid
                    </div>
                </div>
                <div class="mb-2 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" type="text" value="<%= listing.country %>" class="form-control" required>
                    <div class="invalid-feedback">
                        Country name should be valid
                    </div>
                </div>
            </div>
            <div class="mb-2">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" type="text" value="<%= listing.location %>" class="form-control" required>
                <div class="invalid-feedback">
                    Location should be valid
                </div>
            </div>
            <button class="btn bnt-dark add-btn mt-3 mb-2">Edit</button>
        </form>
    </div>
</div>


