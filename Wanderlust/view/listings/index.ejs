<% layout("/layouts/boilerplate") -%>

    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            gap: 1.5rem;
            text-align: center;
            margin-top: 1rem;
        }

        .filter {
            display: flex;
            flex-direction: column;
            /* gap: 0.5rem; */
            /* padding: 0.5rem;
        border-radius: 0.5rem;
        background-color: #f8f9fa; */
            opacity: 0.7;
            cursor: pointer;
        }

        .filter:hover {
            opacity: 1;
        }

        .tax-info {
            display: none;
        }

        .tax-toggle {
            display: flex;
            align-items: center;
            border: 1px solid black;
            border-radius: 1rem;
            padding: 0.5rem;
            height: 3.1rem;
            margin-left: 2.5rem;
        }
    </style>
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trendings</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tower-cell"></i></div>
            <p>Caves</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-tree"></i></div>
            <p>Icelands</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-house-flood-water"></i></div>
            <p>Cavins</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-warehouse"></i></div>
            <p>House</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boart</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-monument"></i></div>
            <p>Historical</p>
        </div>
        <div class="filter">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctics</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-barcode"></i></div>
            <p>Containers</p>
        </div>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
            </div>
        </div>
    </div>

    <!-- Container for all listing cards -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <!-- Loop through and display each listing -->
        <% for(listing of allListings) {%>
            <a href="/listings/<%= listing.id %>" class="listing-link">
                <div class="card col listing-card">
                    <!-- Display the listing image -->
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listings images"
                        style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <!-- Display the listing title and price -->
                            <b>
                                <%= listing.title %>
                            </b> <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
                            <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>


    <script>
        let taxSwtich = document.getElementById("flexSwitchCheckDefault");
        taxSwtich.addEventListener("click", () => {
            let taxInfo = document.querySelectorAll(".tax-info");
            for (info of taxInfo) {
                if (info.style.display != "inline") {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }
            } 
        });
    </script>